<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
  
  <Frame name="DiceMasterMoraleBar" hidden="false" inherits="UnitPowerBarAltTexturableTemplate" parent="UIParent">
	<Size x="256" y="64"/>
	<Anchors>
		<Anchor point="TOP" relativeTo="DiceMasterPanel" relativePoint="BOTTOM" x="0" y="-20"/>
	</Anchors>
	<Animations>
		<AnimationGroup parentKey="flashAnim">	<!--Don't give me a name or $parentFlash below won't resolve correctly. (We should really fix that.)-->
			<Alpha fromAlpha="0" toAlpha="1" duration="0.6" order="1" target="$parentFlash"/>
			<Scripts>
				<OnPlay function="UnitPowerBarAlt_OnFlashPlay"/>
				<OnFinished function="UnitPowerBarAlt_OnFlashFinished"/>
			</Scripts>
		</AnimationGroup>
		<AnimationGroup parentKey="flashOutAnim">	<!--Don't give me a name or $parentFlash below won't resolve correctly. (We should really fix that.)-->
			<Alpha fromAlpha="1" toAlpha="0" duration="0.2" target="$parentFlash"/>
			<Scripts>
				<OnFinished function="UnitPowerBarAlt_OnFlashOutFinished"/>
			</Scripts>
		</AnimationGroup>
	</Animations>
	<Layers>
		<Layer level="OVERLAY" textureSubLevel="1">
			<FontString name="$parentText" inherits="TextStatusBarText" parentKey="text" hidden="true">
				<Anchors>
					<Anchor point="CENTER" x="0" y="0"/>
				</Anchors>
			</FontString>
		</Layer>
		<Layer level="BACKGROUND">
				<Texture parentKey="customframe" file="Interface/AddOns/DiceMaster/Texture/morale-bar" hidden="true">
					<Size x="256" y="129"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="19" />
					</Anchors>
				</Texture>
		</Layer>
	</Layers>
	<Frames>
		<Frame name="$parentDragFrame" inherits="DiceMasterDragFrameTemplate" setAllPoints="true"/>
	</Frames>
	<Scripts>
		<OnMouseDown>
			if not DiceMasterMoraleBarDragFrame:IsShown() then
				DiceMaster4.MoraleBar_OnClick(self, button);
			end
		</OnMouseDown>
		<OnLoad>
			DiceMaster4.MoraleBar_SetUp(self)
		</OnLoad>
		<OnEnter>
			DiceMaster4.MoraleBar_OnEnter(self);
		</OnEnter>
		<OnLeave>
			DiceMaster4.MoraleBar_OnLeave(self);
		</OnLeave>
	</Scripts>
  </Frame>
</Ui>
