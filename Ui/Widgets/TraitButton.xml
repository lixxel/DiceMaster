						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
	</Layers>
	<Scripts>
		<OnShow>
			self:ClearAllPoints()
